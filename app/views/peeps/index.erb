<% if current_maker %>
signed in as <%=current_maker.username%>

<form action='/sessions/sign_out' method='post'>
  <input type='submit' value='sign out'>
</form>

<form action='/peeps/new_peep' method='post'>
  <input type='text' name='peep'>
  <input type='submit' value='peep!'>
</form>

<% end %>

<% @peeps.reverse! %>
<% @peeps.each do |peep| %>
<div><a href='/peeps/filter/<%=peep.maker.username%>'><%=peep.maker.username%></a> peeped:</div>
<div><%=peep.text%></div>
<div>on: <%=peep.time%></div>
<div>
<form action='peeps/comments'>
  <input type='submit' value='comments'>
  <input type='hidden' name='peep_id' value='<%=peep.id%>'>
</form>
<div>
<% end %>
